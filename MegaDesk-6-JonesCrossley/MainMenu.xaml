        <Button Content="Add New Quote" x:Name="AddNewQuote" Click="AddNewQuote_Click" Margin="110,534,0,76" Width="130" Height="30" FontFamily="Trebuchet MS" FontSize="14" RequestedTheme="Light" Opacity="2" Background="{x:Null}" BorderBrush="White" Foreground="White"/>

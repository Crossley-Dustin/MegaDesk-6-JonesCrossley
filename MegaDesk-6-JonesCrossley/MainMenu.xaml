        <Button Content="Exit" x:Name="Exit" Click="Exit_Click" Margin="747,534,147,76" Width="130" Height="30" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="14" Background="{x:Null}" HorizontalAlignment="Center" RenderTransformOrigin="0.498,0.453" BorderBrush="White" Foreground="White"/>
        <Image HorizontalAlignment="Left" Height="266" Margin="309,255,0,0" VerticalAlignment="Top" Width="511" Source="Assets/desk.png"/>
        <TextBox HorizontalAlignment="Left" Margin="297,83,0,0" TextWrapping="Wrap" Text="MegaDesk" VerticalAlignment="Top" Width="437" Height="103" FontFamily="Trebuchet MS" FontSize="72" TextAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" />




    </Grid>
